@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    int count = 0;
    string color = "";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Duyurular</h4>
                <p class="card-description">
                    @* Add class <code>.table</code> *@
                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Tarih</th>
                                <th>Tür</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;

                                if(item.Status == "Yeni Yazı")
                                {
                                    color = "badge badge-danger";
                                }

                                if(item.Status == "Yeni Video")
                                {
                                    color = "badge badge-warning";
                                }

                                if(item.Status == "Konferans")
                                {
                                    color = "badge badge-info";
                                }

                                if(item.Status == "WorkShop")
                                {
                                    color = "badge badge-success";
                                }

                                if(item.Status == "Bootcamp")
                                {
                                    color = "badge badge-primary";
                                }

                                <tr>
                                    <th>@count</th>
                                    <td>@item.Title</td>
                                    <td>@(((DateTime)item.Date).ToString("dd MMMM yyyy"))</td>
                                    <td><label class="@color">@item.Status</label></td>
                                    <td><a href="/Writer/Default/AnnouncementDetails/@item.AnnouncementID" class="btn btn-outline-primary">Detaylar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

