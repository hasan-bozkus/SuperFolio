@model WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Duyuru Detayaları</h4>
                <p class="card-description">
                    @* Add class <code>.table</code> *@
                </p>
                <form class="form-group">
                    <input type="hidden" value="@Model.WriterMessageID" />

                    <label>Gönderici Adı: </label>
                    <input type="text" disabled class="form-control" value="@Model.SenderName" />
                    <br />

                    <label>Gönderici E-Posta: </label>
                    <input type="text" disabled class="form-control" value="@Model.Sender" />
                    <br />

                    <label>Konu: </label>
                    <input type="text" disabled class="form-control" value="@Model.Subject" />
                    <br />

                    <textarea rows="10" cols="3" class="form-control" disabled asp-for="@Model.MessageContent"> </textarea>
                </form>
            </div>
        </div>
    </div>
</div>

