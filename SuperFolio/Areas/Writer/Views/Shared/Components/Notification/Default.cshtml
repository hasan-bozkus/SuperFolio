@model IEnumerable<Announcement>

@{
    string color = "";
}

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Bildirimler</p>
    @foreach (var item in Model)
    {
        if (item.Status == "Yeni Yazı")
        {
            color = "bg-danger";
        }
        else if (item.Status == "Yeni Video")
        {
            color = "bg-warning";
        }
        else if (item.Status == "Konferans")
        {
            color = "bg-info";
        }
        else if (item.Status == "WorkShop")
        {
            color = "bg-success";
        }
        else if (item.Status == "Bootcamp")
        {
            color = "bg-primary";
        }

        <a href="/Writer/Default/AnnouncementDetails/@item.AnnouncementID" class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="preview-icon @color">
                    <i class="ti-info-alt mx-0"></i>
                </div>
            </div>
            <div class="preview-item-content">
                <h6 class="preview-subject font-weight-normal">@item.Title</h6>
                <p class="font-weight-light small-text mb-0 text-muted">
                    @item.Status @(((DateTime)item.Date).ToString("dd.MM.yyyy"))
                </p>
            </div>
        </a>
    }
</div>