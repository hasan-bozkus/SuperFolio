@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İletişim Talepleri</h4>
                
                <div class="table-responsive">
                    <table class="table">
                        <thead >
                            <tr>
                                <th scope="col" class="sort" data-sort="name">#</th>
                                <th scope="col" class="sort" data-sort="budget">Gönderen</th>
                                <th scope="col" class="sort" data-sort="budget">Tarih</th>
                                <th scope="col">Sil</th>
                                <th scope="col" class="sort" data-sort="completion">Mesajı Gör</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var item in Model)
                            {
                                count++;

                                <tr>
                                    <th>@count</th>
                                    <td class="budget">
                                        @item.Name
                                    </td>
                                    <td class="budget">
                                        @(((DateTime)item.Date).ToString("dd MMM yyyy"))
                                    </td>
                                    <td><a href="/Contact/DeleteContact/@item.MesasgeID" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Contact/ContactDetails/@item.MesasgeID" class="btn btn-outline-info">Mesajı Gör</a></td>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="#">Action</a>
                                                <a class="dropdown-item" href="#">Another action</a>
                                                <a class="dropdown-item" href="#">Something else here</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Contact/AddContact" class="btn btn-primary">Yeni Hizmet Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>

