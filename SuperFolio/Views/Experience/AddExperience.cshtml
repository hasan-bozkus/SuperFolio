@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <!-- Card header -->
    <div class="card-header border-0">
        <h3 class="mb-0"> Yeni Yetenek Ekleme Sayfası</h3>
    </div>
    <div class="card-body">
        <form method="post">

            <label>Deneyim Adı</label>
            <input type="text" asp-for="Name" class="form-control" />
            <br />

            <label>Tarih</label>
            <input type="text" asp-for="Date" class="form-control" />
            <br />

            <label>Görsel</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />

            <label>Açıklama</label>
            <textarea rows="10" cols="3" asp-for="Description" class="form-control"></textarea>
            <br />
            <button class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>

