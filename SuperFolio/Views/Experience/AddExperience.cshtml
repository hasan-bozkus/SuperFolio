@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="row">

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Deneyim Ekleme Sayfası</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputDate2">Tarih</label>
                    <input type="text" asp-for="Date" class="form-control" id="exampleInputDate2">
                </div>
                <div class="form-group">
                    <label for="exampleInputImageUrl3">Görsel Yolu</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" id="exampleInputImageUrl3">
                </div>
                
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <textarea asp-for="Description" rows="6" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Experience/Index/" class="btn btn-dark">İptal</a>
            </form>
        </div>
    </div>
</div>
</div>