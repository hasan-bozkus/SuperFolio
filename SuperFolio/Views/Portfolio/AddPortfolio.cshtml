@model Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">

        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Yeni Proje Girişi</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <label>Proje Başlığı</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <br />

                    <label>Görsel 1</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <br />

                    <label>Görsel 2</label>
                    <input type="text" asp-for="ImageUrl2" class="form-control" />
                    <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                    <br />

                    <label>Proje Url</label>
                    <input type="text" asp-for="ProjectUrl" class="form-control" />
                    <span asp-validation-for="ProjectUrl" class="text-danger"></span>
                    <br />

                    <label>Proje Fiyatı</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <br />

                    <label>Tamamlanma Oranı</label>
                    <input type="text" asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                    <br />

                    <button class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
