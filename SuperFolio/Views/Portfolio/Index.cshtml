@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projeler</h4>
               @*  <p class="card-description">
                    Add class <code>.table</code>
                </p> *@
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Proje</th>
                                <th scope="col" class="sort" data-sort="budget">Ücret</th>
                                <th scope="col" class="sort" data-sort="status">Durum</th>
                                <th scope="col" class="sort" data-sort="completion">Tamamlanma Oranı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <a href="#" class="avatar rounded-circle mr-3">
                                                <img alt="Image placeholder" src="@item.Platform">
                                            </a>
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm">@item.Name</span>
                                            </div>
                                        </div>
                                    </th>
                                    <td class="budget">
                                        @item.Price
                                    </td>
                                    <td>
                                        <span class="badge badge-dot mr-4">
                                            <i class="bg-success"></i>
                                            <span class="status">Tamamlandı</span>
                                        </span>
                                    </td>

                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="completion mr-2">@item.Value%</span>
                                         
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <a onclick="return confirm('Silmek istediğinize emin misiniz?');" href="/Portfolio/DeletePortfolio/@item.PortfolioID" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                    <td class="text-right">
                                        <a href="/Portfolio/UpdatePortfolio/@item.PortfolioID" class="btn btn-outline-warning">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/Portfolio/AddPortfolio/" class="btn btn-primary">Yeni Proje Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
