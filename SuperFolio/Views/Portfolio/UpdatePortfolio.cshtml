@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">

        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0"> Proje Düzenleme Sayfası</h3>
            </div>
            <div class="card-body">
                <form method="post">

                    <input type="hidden" asp-for="PortfolioID" />

                    <label>Proje Başlığı</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <br />

                    <label>Görsel 1</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <br />

                    <label>Görsel 2</label>
                    <input type="text" asp-for="ImageUrl2" class="form-control" />
                    <span asp-validation-for="ImageUrl2" class="text-danger"></span>
                    <br />

                    <label>Proje Url</label>
                    <input type="text" asp-for="ProjectUrl" class="form-control" />
                    <span asp-validation-for="ProjectUrl" class="text-danger"></span>
                    <br />

                    <label>Proje Fiyatı</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <br />

                    <label>Tamamlanma Oranı</label>
                    <input type="text" asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                    <br />

                    <label>Platform</label>
                    <input type="text" asp-for="Platform" class="form-control" />
                    <span asp-validation-for="Platform" class="text-danger"></span>
                    <br />

                    <label>Küçük Görsel 1 </label>
                    <input type="text" asp-for="Image1" class="form-control" />
                    <span asp-validation-for="Image1" class="text-danger"></span>
                    <br />

                    <label>Küçük Görsel 2 </label>
                    <input type="text" asp-for="Image2" class="form-control" />
                    <span asp-validation-for="Image2" class="text-danger"></span>
                    <br />

                    <label>Küçük Görsel 3 </label>
                    <input type="text" asp-for="Image3" class="form-control" />
                    <span asp-validation-for="Image3" class="text-danger"></span>
                    <br />

                    <label>Küçük Görsel 4 </label>
                    <input type="text" asp-for="Image4" class="form-control" />
                    <span asp-validation-for="Image4" class="text-danger"></span>
                    <br />


                    <button class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

