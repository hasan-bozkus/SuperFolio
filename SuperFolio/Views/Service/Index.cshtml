@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}
<div class="row">

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetler</h4>
            
            <div class="table-responsive">
                <table class="table">
                    <thead class="">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="">
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <th>@count</th>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle</a>
            </div>
        </div>
    </div>
</div>
</div>
