@model Service
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">

<div class="card">
    <!-- Card header -->
    <div class="card-header border-0">
        <h3 class="mb-0"> Hizmet Güncelleme Sayfası</h3>
    </div>
    <div class="card-body">
        <form method="post">

            <input type="hidden" asp-for="ServiceID" />

            <label>Hizmet Adı</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />

            <label>Görsel Yolu</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />

            <button class="btn btn-outline-info">Kaydet</button>
        </form>
    </div>
</div>
</div>
