@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Detay Paneli</h4>
                <form method="post" class="forms-sample">

                    <input type="hidden" asp-for="TestimonialID" />

                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        <input type="text" asp-for="ClientName" class="form-control" id="exampleInputName1">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Şirket</label>
                        <input type="text" asp-for="Company" class="form-control" id="exampleInputName1">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Unvan</label>
                        <input type="text" asp-for="Title" class="form-control" id="exampleInputName1">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputName1">Resim Yolu</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" id="exampleInputName1">
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Yorum</label>
                        <textarea asp-for="Comment" rows="6" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                    </div>
                    <button class="btn btn-primary mr-2">Kaydet</button>
                    <a asp-action="Index" class="btn btn-dark">İptal</a>
                </form>
            </div>
        </div>
    </div>
</div>
